        <dc:title>Scala Test Driven Development</dc:title>
        <dc:creator opf:file-as="Sood, Gaurav" opf:role="aut">Gaurav Sood</dc:creator>
        <dc:contributor opf:file-as="calibre" opf:role="bkp">calibre (3.39.1) [https://calibre-ebook.com]</dc:contributor>
